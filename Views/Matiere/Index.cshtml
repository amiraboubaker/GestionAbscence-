@model List<GestionAbscence.Models.Matiere>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestion des Matières</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="min-h-screen bg-gray-100 flex">
        <!-- Sidebar -->
        <div class="w-64 bg-teal-900 text-white flex flex-col">
            <div class="text-2xl font-bold p-4">Dashboard</div>
            <nav class="flex-grow">
                <a href="#" class="block py-2 px-4 hover:bg-teal-700">Étudiants</a>
                <a href="#" class="block py-2 px-4 hover:bg-teal-700">Matières</a>
                <a href="#" class="block py-2 px-4 hover:bg-teal-700">Absences</a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="flex-grow p-6">
            <h1 class="text-2xl font-bold mb-4">Gestion des Matières</h1>

            <div class="mb-4 flex items-center justify-between">
                <a href="@Url.Action("Create", "Matiere")" class="bg-green-500 text-white py-2 px-4 rounded-lg hover:bg-green-600">
                    Ajouter une matière
                </a>
                <input type="text" id="search" placeholder="Rechercher une matière..." class="border rounded-lg px-3 py-2 text-sm w-1/3">
            </div>

            <div class="bg-white shadow rounded-lg overflow-hidden">
                <table class="min-w-full border-collapse border border-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="border border-gray-200 px-4 py-2 text-left">Code Matière</th>
                            <th class="border border-gray-200 px-4 py-2 text-left">Nom Matière</th>
                            <th class="border border-gray-200 px-4 py-2 text-left">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="matiere-table">
                        @foreach (var matiere in Model)
                        {
                            <tr>
                                <td class="border border-gray-200 px-4 py-2">@matiere.CodeMatiere</td>
                                <td class="border border-gray-200 px-4 py-2">@matiere.NomMatiere</td>
                                <td class="border border-gray-200 px-4 py-2">
                                    <a href="@Url.Action("Details", "Matiere", new { id = matiere.CodeMatiere })" class="bg-blue-500 text-white py-1 px-2 rounded-lg hover:bg-teal-600">Voir</a>
                                    <a href="@Url.Action("Edit", "Matiere", new { id = matiere.CodeMatiere })" class="bg-teal-500 text-white py-1 px-2 rounded-lg hover:bg-teal-600">Modifier</a>
                                    <a href="javascript:void(0);" onclick="if(confirm('Êtes-vous sûr de vouloir supprimer cette matière?')) window.location='@Url.Action("Delete", "Matiere", new { id = matiere.CodeMatiere })';" class="bg-red-500 text-white py-1 px-2 rounded-lg hover:bg-red-600">Supprimer</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        const searchInput = document.getElementById('search');
        const tableRows = document.querySelectorAll('#matiere-table tr');

        searchInput.addEventListener('input', () => {
            const filter = searchInput.value.toLowerCase();
            tableRows.forEach(row => {
                const rowText = Array.from(row.cells).map(cell => cell.textContent.toLowerCase()).join(' ');
                row.style.display = rowText.includes(filter) ? '' : 'none';
            });
        });
    </script>
</body>
</html>
