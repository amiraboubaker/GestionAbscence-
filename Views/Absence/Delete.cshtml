@model GestionAbscence.Models.FicheAbsenceSeance

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Supprimer une Absence</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="min-h-screen bg-gray-100 flex">
        <!-- Sidebar -->
        <div class="w-64 bg-teal-900 text-white flex flex-col">
            <div class="text-2xl font-bold p-4">Dashboard</div>
            <nav class="flex-grow">
                <a href="#" class="block py-2 px-4 hover:bg-teal-700">Étudiants</a>
                <a href="#" class="block py-2 px-4 hover:bg-teal-700">Matières</a>
                <a href="#" class="block py-2 px-4 hover:bg-teal-700">Absences</a>
            </nav>
        </div>
        <!-- Contenu -->
    <div class="p-6">
        <h1 class="text-2xl font-bold mb-4">Supprimer une Absence</h1>
        <p class="text-gray-700 mb-4">Êtes-vous sûr de vouloir supprimer cette absence ?</p>
        <dl class="space-y-2">
            <dt class="font-bold">Description :</dt>
            <dd>@Model.FicheAbsence.Description</dd>
            <dt class="font-bold">Classe :</dt>
            <dd>@Model.FicheAbsence.CodeClasse</dd>
            <dt class="font-bold">Matière :</dt>
            <dd>@Model.FicheAbsence.CodeMatiere</dd>
            <dt class="font-bold">Enseignant :</dt>
            <dd>@Model.FicheAbsence.CodeEnseignant</dd>
            <dt class="font-bold">Séance :</dt>
            <dd>@Model.CodeSeance</dd>
        </dl>
        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)
            <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-500">Supprimer</button>
            <a asp-action="Index" class="bg-gray-300 text-black px-4 py-2 rounded hover:bg-gray-400">Annuler</a>
        </form>
    </div>
</body>
</html>
