@model GestionAbscence.Models.Etudiant

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modifier un Étudiant</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="min-h-screen bg-gray-100 flex">
        <div class="w-64 bg-teal-900 text-white flex flex-col">
            <div class="text-2xl font-bold p-4">Dashboard</div>
            <nav class="flex-grow">
                <a href="#" class="block py-2 px-4 hover:bg-teal-700">Étudiants</a>
                <a href="#" class="block py-2 px-4 hover:bg-teal-700">Matières</a>
                <a href="#" class="block py-2 px-4 hover:bg-teal-700">Absences</a>
            </nav>
        </div>

        <div class="flex-grow p-6">
            <h1 class="text-2xl font-bold mb-4">Modifier un Étudiant</h1>

            <form asp-action="Edit" method="post">
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="form-group">
                    <label for="Nom">Nom</label>
                    <input type="text" class="form-control" id="Nom" name="Nom" value="@Model.Nom" required />
                </div>
                <div class="form-group">
                    <label for="Prenom">Prénom</label>
                    <input type="text" class="form-control" id="Prenom" name="Prenom" value="@Model.Prenom" required />
                </div>
                <div class="form-group">
                    <label for="Mail">E-mail</label>
                    <input type="email" class="form-control" id="Mail" name="Mail" value="@Model.Mail" required />
                </div>
                <div class="form-group">
                    <label for="Classe">Classe</label>
                    <input type="text" class="form-control" id="Classe" name="Classe" value="@Model.CodeClasse" required />
                </div>
                <div class="form-group">
                    <label for="NumInscription">Num Inscription</label>
                    <input type="number" class="form-control" id="NumInscription" name="NumInscription" value="@Model.NumInscription" required />
                </div>
                <div class="form-group">
                    <label for="Adresse">Adresse</label>
                    <input type="text" class="form-control" id="Adresse" name="Adresse" value="@Model.Adresse" required />
                </div>
                <div class="form-group">
                    <label for="Tel">Tel</label>
                    <input type="number" class="form-control" id="Tel" name="Tel" value="@Model.Tel" required />
                </div>
                <button type="submit" class="btn btn-primary">Modifier</button>
            </form>
        </div>
    </div>
</body>
</html>
