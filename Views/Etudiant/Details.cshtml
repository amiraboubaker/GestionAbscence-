@model GestionAbscence.Models.Etudiant

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Détails de l'Étudiant</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="min-h-screen bg-gray-100 flex">
        <div class="w-64 bg-teal-900 text-white flex flex-col">
            <div class="text-2xl font-bold p-4">Dashboard</div>
            <nav class="flex-grow">
                <a href="#" class="block py-2 px-4 hover:bg-teal-700">Étudiants</a>
                <a href="#" class="block py-2 px-4 hover:bg-teal-700">Matières</a>
                <a href="#" class="block py-2 px-4 hover:bg-teal-700">Absences</a>
            </nav>
        </div>

        <div class="flex-grow p-6">
            <h1 class="text-2xl font-bold mb-4">Détails de l'Étudiant</h1>

            <div class="bg-white shadow rounded-lg p-6">
                <div class="mb-4">
                    <strong>Nom:</strong> @Model.Nom
                </div>
                <div class="mb-4">
                    <strong>Prénom:</strong> @Model.Prenom
                </div>
                <div class="mb-4">
                    <strong>E-mail:</strong> @Model.Mail
                </div>

                <a href="@Url.Action("Edit", "Etudiant", new { id = Model.Id })" class="bg-teal-500 text-white py-2 px-4 rounded-lg hover:bg-teal-600">Modifier</a>
                <a href="@Url.Action("Index", "Etudiant")" class="bg-gray-500 text-white py-2 px-4 rounded-lg hover:bg-gray-600">Retour</a>
            </div>
        </div>
    </div>
</body>
</html>
