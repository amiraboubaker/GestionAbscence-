@model GestionAbscence.Models.Etudiant

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Supprimer un Étudiant</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="min-h-screen bg-gray-100 flex">
        <div class="w-64 bg-teal-900 text-white flex flex-col">
            <div class="text-2xl font-bold p-4">Dashboard</div>
            <nav class="flex-grow">
                <a href="#" class="block py-2 px-4 hover:bg-teal-700">Étudiants</a>
                <a href="#" class="block py-2 px-4 hover:bg-teal-700">Matières</a>
                <a href="#" class="block py-2 px-4 hover:bg-teal-700">Absences</a>
            </nav>
        </div>

        <div class="flex-grow p-6">
            <h1 class="text-2xl font-bold mb-4">Supprimer un Étudiant</h1>

            <div class="bg-white shadow rounded-lg p-6">
                <p>Êtes-vous sûr de vouloir supprimer l'étudiant <strong>@Model.Nom @Model.Prenom</strong> ?</p>

                <form method="post" class="mt-4">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <button type="submit" class="bg-red-500 text-white py-2 px-4 rounded-lg hover:bg-red-600">Supprimer</button>
                    <a href="@Url.Action("Index", "Etudiant")" class="bg-gray-500 text-white py-2 px-4 rounded-lg hover:bg-gray-600">Annuler</a>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
