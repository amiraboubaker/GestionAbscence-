@model GestionAbscence.Models.Etudiant

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ajouter un Étudiant</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="min-h-screen bg-gray-100 flex">
        <!-- Sidebar -->
        <div class="w-64 bg-teal-900 text-white flex flex-col">
            <div class="text-2xl font-bold p-4">Dashboard</div>
            <nav class="flex-grow">
                <a href="#" class="block py-2 px-4 hover:bg-teal-700">Étudiants</a>
                <a href="#" class="block py-2 px-4 hover:bg-teal-700">Matières</a>
                <a href="#" class="block py-2 px-4 hover:bg-teal-700">Absences</a>
            </nav>
        </div>

        <!-- Content -->
        <div class="flex-grow p-6">
            <h1 class="text-2xl font-bold mb-4">Ajouter un Étudiant</h1>

            <form asp-action="Create" method="post" class="space-y-6">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-red-500 text-sm mb-4" })

                <!-- Nom -->
                <div>
                    <label for="Nom" class="block text-gray-700 font-bold">Nom</label>
                    @Html.TextBoxFor(model => model.Nom, new { @class = "w-full p-2 border border-gray-300 rounded", required = "required" })
                    @Html.ValidationMessageFor(model => model.Nom, "", new { @class = "text-red-500 text-sm" })
                </div>

                <!-- Prénom -->
                <div>
                    <label for="Prenom" class="block text-gray-700 font-bold">Prénom</label>
                    @Html.TextBoxFor(model => model.Prenom, new { @class = "w-full p-2 border border-gray-300 rounded", required = "required" })
                    @Html.ValidationMessageFor(model => model.Prenom, "", new { @class = "text-red-500 text-sm" })
                </div>

                <!-- E-mail -->
                <div>
                    <label for="Mail" class="block text-gray-700 font-bold">E-mail</label>
                    @Html.TextBoxFor(model => model.Mail, new { type = "email", @class = "w-full p-2 border border-gray-300 rounded", required = "required" })
                    @Html.ValidationMessageFor(model => model.Mail, "", new { @class = "text-red-500 text-sm" })
                </div>

                <!-- Date Naissance -->
                <div>
                    <label for="DateNaissance" class="block text-gray-700 font-bold">Date Naissance</label>
                    @Html.TextBoxFor(model => model.DateNaissance, new { type = "datetime-local", @class = "w-full p-2 border border-gray-300 rounded", required = "required" })
                    @Html.ValidationMessageFor(model => model.DateNaissance, "", new { @class = "text-red-500 text-sm" })
                </div>

                <!-- Classe -->
                <div>
                    <label for="CodeClasse" class="block text-gray-700 font-bold">Classe</label>
                    @Html.TextBoxFor(model => model.CodeClasse, new { type = "number", @class = "w-full p-2 border border-gray-300 rounded", required = "required" })
                    @Html.ValidationMessageFor(model => model.CodeClasse, "", new { @class = "text-red-500 text-sm" })
                </div>


                <!-- Num Inscription -->
                <div>
                    <label for="NumInscription" class="block text-gray-700 font-bold">Num Inscription</label>
                    @Html.TextBoxFor(model => model.NumInscription, new { type = "number", @class = "w-full p-2 border border-gray-300 rounded", required = "required" })
                    @Html.ValidationMessageFor(model => model.NumInscription, "", new { @class = "text-red-500 text-sm" })
                </div>

                <!-- Adresse -->
                <div>
                    <label for="Adresse" class="block text-gray-700 font-bold">Adresse</label>
                    @Html.TextBoxFor(model => model.Adresse, new { @class = "w-full p-2 border border-gray-300 rounded", required = "required" })
                    @Html.ValidationMessageFor(model => model.Adresse, "", new { @class = "text-red-500 text-sm" })
                </div>

                <!-- Tel -->
                <div>
                    <label for="Tel" class="block text-gray-700 font-bold">Tel</label>
                    @Html.TextBoxFor(model => model.Tel, new { type = "number", @class = "w-full p-2 border border-gray-300 rounded", required = "required" })
                    @Html.ValidationMessageFor(model => model.Tel, "", new { @class = "text-red-500 text-sm" })
                </div>

                <!-- Submit Button -->
                <button type="submit" class="bg-teal-900 text-white px-4 py-2 rounded hover:bg-teal-700">Ajouter</button>
            </form>
        </div>
    </div>
</body>
</html>
